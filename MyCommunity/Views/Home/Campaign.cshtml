@model MyCommunity.ViewModels.CampaignViewModel
<script>
    $(function () {
        $("#newEventPopup").dialog({
            autoOpen: false,
            open: function (event, ui) {
                $(this).load("@Url.Action("CreateCampaignEventPartial", new {id=@Model.Id})");
            }
        });
            $("#newEventButton").button().click(function () {
                $("#newEventPopup").dialog("open");
            });
            $('#submitComment').button().click( function (event) {
                event.preventDefault();
                var comment = $("#comment").val();
                $.ajax({
                    url: "/Home/CommentCampaign",
                    type: "POST",
                    data: { "comment": comment,"id":@Model.Id },
            success: function (data) {
                if (data.state == "Success") {
                    $('#comments').prepend('<p>' + data.additional + '</p>');
                }
                else {
                    alert(data.additional);
                }
            },
            error: function (data) {
                alert('Oops. Something wnet wrong!');
            }
        });
            return false;
        });
        });
    
</script>
@{
    ViewBag.Title = "Campaign";
}

<h2>@Model.Name</h2>
 <p>Campagin Events</p>
    <ul>
        @foreach (var group in Model.Evts)
        {
            <li>@Html.ActionLink(group.Value, "Event", new { id = group.Key })</li>
        }
    </ul>
    <button id="newEventButton">Create Event</button>
<div id="newEventPopup" title="Dialog Title"></div>

    @using (Html.BeginForm("Comment", "Home"))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend>Post:</legend>
            <ol>
                <li>
                    <label>Comment</label>
                    <input type="text" name="comment " id="comment" />
                </li>
            </ol>
            <input id="submitComment" type="submit" value="Post" />
        </fieldset>
    }
    <div id="comments">
        @foreach (var comment in Model.Messages.Messages)
        {
            <p>
                @comment.Message
            </p>
        }
    </div>