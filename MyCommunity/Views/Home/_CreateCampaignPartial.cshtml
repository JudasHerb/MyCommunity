@model MyCommunity.ViewModels.CreateCampaignViewModel

<script>
    $("#submitGroup13").button().click(function (event) {
        event.preventDefault();
        var name = $("#Name").val();
        var description = $("#Description").val();
        var isPublic = $("#IsPublic").is(':checked');
        
        $.ajax({
            type: "POST",
            url: "/Home/CreateCampaign",
            data: { "name": name, "description":description },
            success: function (data) {
                
                if (data.state == "Success") {
                    $("#newCampaignPopup").dialog("close");
                    $(location).attr("href", data.additional);
                }
                else {
                    alert(data.additional);
                }
            },
            error: function(data) {
                $(this).closest("#newCampaignPopup").dialog("close");
            }
        });
    });
</script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Create Campaign</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
            </li>
            <li>
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description)
            </li>
        </ol>
        <input id="submitGroup13" type="submit" value="Save" />
    </fieldset>
}


